<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:textSize">24sp</item> <!-- Adjust text size as needed -->
        <item name="android:textColor">@android:color/black</item> <!-- Text color -->
        <item name="android:textStyle">bold</item> <!-- Text style (bold) -->
        <!-- You can add more style attributes as needed -->
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
<!--    <item name="android:background">@drawable/baseline_tag_faces_24</item>-->
        <!-- You can add more style attributes as needed -->
    </style>


    <style name="FieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <!-- You can add more style attributes as needed -->
    </style>


    <style name="TextInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textborder</item> <!-- Use your drawable resource here -->
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">Enter text</item>
        <!-- You can add more style attributes as needed -->
    </style>


</resources>